# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.AMIable.index
GET     /ami                        controllers.AMIable.ami(arn: String)
GET     /amis                       controllers.AMIable.amis
GET     /instances                  controllers.AMIable.ssaInstances(stack: Option[String], stage: Option[String], app: Option[String])
GET     /instanceAMIs               controllers.AMIable.ssaInstanceAMIs(stack: Option[String], stage: Option[String], app: Option[String])
GET     /healthcheck                controllers.Healthcheck.healthcheck

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
